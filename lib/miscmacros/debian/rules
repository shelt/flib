#!/usr/bin/make -f
export DH_COMPAT=4

BUILD_ARCH = $(shell dpkg --print-installation-architecture)

CFLAGS= -g
ifneq (,$(findstring noopt,$(DEB_BUILD_OPTIONS)))
     CFLAGS += -O0
        else
     CFLAGS += -O2 -fno-strict-aliasing
endif

BINARY_VERSION=$(shell basename `chicken-setup -R`)

CHICKEN_EGG=miscmacros

build: build-stamp
build-stamp:
	dh_testdir
	mkdir -p $(CURDIR)/debian/tmp
	chicken-setup -dont-ask -repository $(CURDIR)/debian/tmp -local $(CURDIR) $(CHICKEN_EGG)
	touch build-stamp

clean:
	dh_testdir
	dh_testroot
	rm -f build-stamp
	rm -rf debian/tmp
	rm -rf *.egg *.egg.dir 
	dh_clean

install: build
	dh_testdir
	dh_testroot
	dh_installdirs

binary-common:
	dh_testdir
	dh_testroot
	dh_install debian/tmp/$(CHICKEN_EGG){*.so,*.scm,*.setup-info,*.exports} var/lib/chicken/$(BINARY_VERSION)
	dh_installdocs debian/tmp/{$(CHICKEN_EGG)*.html,index.html} 
#	dh_installman
#	dh_installchangelogs ChangeLog
#	dh_link
ifeq "$(findstring nostrip,$(DEB_BUILD_OPTIONS))" ""
	dh_strip
endif	
	dh_compress
	dh_fixperms
	dh_makeshlibs -V
	dh_installdeb
	dh_shlibdeps 
	dh_gencontrol
	dh_md5sums
	dh_builddeb

binary-indep: build install

binary-arch: build install
	$(MAKE) -f debian/rules DH_OPTIONS=-a binary-common

binary-%: build install
	make -f debian/rules binary-common DH_OPTIONS=-p$*

binary: binary-indep binary-arch
.PHONY: build clean binary-indep binary-arch binary install
